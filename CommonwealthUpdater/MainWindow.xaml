<Window x:Name="updaterwindow" x:Class="CommonwealthUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonwealthUpdater"
        mc:Ignorable="d"
        Title="Lineage II Commonwealth Client Updater" Width="800" WindowStyle="ThreeDBorderWindow" MinWidth="800" MinHeight="140" MaxWidth="800" MaxHeight="140">
    <Grid x:Name="grid">
        <ProgressBar x:Name="updatepercentage" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="630" Margin="10,17,0,0"/>
        <ComboBox x:Name="actionselector" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" Width="130" SelectedIndex="0" IsSynchronizedWithCurrentItem="False" Margin="645,17,0,0">
            <Button Content="Запуск" Click="ClientRun_Click"/>
            <Button Content="Параметры" Click="Settings_Click"/>
            <Button Content="Перепроверить файлы" Click="Recheck_Click"/>
        </ComboBox>
        <Label x:Name="ActionShower" Content="" HorizontalAlignment="Left" Margin="12,59,0,0" VerticalAlignment="Top" Width="628"/>

    </Grid>
</Window>
