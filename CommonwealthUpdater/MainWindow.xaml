<Window x:Name="updaterwindow" x:Class="CommonwealthUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonwealthUpdater"
        mc:Ignorable="d"
        Title="Updater" Height="600" Width="800" WindowStyle="None" MinWidth="800" MinHeight="600" MaxWidth="800" MaxHeight="600">
    <Grid Height="596">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="updatepercentage" HorizontalAlignment="Left" Height="30" VerticalAlignment="Bottom" Width="630" Margin="5,0,0,15" Grid.ColumnSpan="2"/>
        <Separator x:Name="separator" Margin="0,0,0,60" VerticalAlignment="Bottom" Grid.ColumnSpan="3"/>
        <ComboBox x:Name="actionselector" Margin="0,0,10,15" VerticalAlignment="Bottom" Height="30" Grid.Column="2" HorizontalAlignment="Right" Width="130"/>

    </Grid>
</Window>
